
<div class="product-inner">
    {{#each description}}
    <div class="product-des">
        <div class="product-des-topic">
            <p class="label" style="margin-top: 0.5vh">{{this.title}}</p>
        </div>
        <div class="product-des-inner">
            <p class="product-des__text"> {{{this.text}}}</p>
        </div>
    </div>
    <div class="separator" style="width: 96%"></div>
    {{/each}}
</div>